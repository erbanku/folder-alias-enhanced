{
  "publisher": "erbanku",
  "name": "folder-alias-enhanced",
  "displayName": "Folder Alias Enhanced",
  "version": "0.1.6",
  "description": "An extension to add folder alias labels to the VSCode file tree",
  "author": "erbanku",
  "license": "GPLV3",
  "homepage": "https://github.com/erbanku/folder-alias-enhanced#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/erbanku/folder-alias-enhanced"
  },
  "bugs": {
    "url": "https://github.com/erbanku/folder-alias-enhanced/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "media/icons.png",
  "files": [
    "LICENSE",
    "dist/*",
    "media/*"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "folder-alias.addAlias",
        "title": "Add/Edit Alias",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "folder-alias.removeAlias",
        "title": "Remove Alias",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "folder-alias.showWelcome",
        "title": "Show Welcome Page",
        "category": "Folder Alias"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folder-alias.addAlias",
          "when": "explorerResourceIsFolder",
          "group": "1_modification@1"
        },
        {
          "command": "folder-alias.removeAlias",
          "when": "explorerResourceIsFolder",
          "group": "1_modification@2"
        }
      ]
    },
    "configuration": {
      "title": "Folder Alias Enhanced",
      "properties": {
        "folder-alias-enhanced.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Folder Alias Enhanced extension."
        },
        "folder-alias-enhanced.defaultAliasType": {
          "type": "string",
          "enum": [ "public", "private" ],
          "default": "public",
          "description": "Default alias type when adding a new alias (public or private)."
        },
        "folder-alias-enhanced.autoCreatePublicConfig": {
          "type": "boolean",
          "default": false,
          "description": "Automatically create public-folder-alias.json if it does not exist."
        },
        "folder-alias-enhanced.autoCreatePrivateConfig": {
          "type": "boolean",
          "default": false,
          "description": "Automatically create private-folder-alias.json if it does not exist."
        },
        "folder-alias-enhanced.autoAddPrivateToGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add private-folder-alias.json to .gitignore."
        },
        "folder-alias-enhanced.aliasPriority": {
          "type": "string",
          "enum": [ "private-first", "public-first" ],
          "default": "private-first",
          "description": "Priority when merging aliases - 'private-first' (private overrides public) or 'public-first' (public overrides private)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "pnpm build --watch --sourcemap",
    "prepare": "pnpm update:gen",
    "update:gen": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "pnpm run build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.100.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.4.1",
    "bumpp": "^10.1.1",
    "destr": "^2.0.5",
    "eslint": "^9.27.0",
    "lodash-es": "^4.17.21",
    "mkdirp": "^3.0.1",
    "pathe": "^2.0.3",
    "reactive-vscode": "^0.4.1",
    "taze": "^19.1.0",
    "tsdown": "^0.18.1",
    "typescript": "^5.8.3",
    "ufo": "^1.6.1",
    "vscode-ext-gen": "^1.0.2"
  }
}
